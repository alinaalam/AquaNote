{% extends '::base.html.twig' %}

{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Genus</th>
            <th># of species</th>
            <th>Last Updated</th>
        </tr>
        </thead>
        <tbody>
        {#{% set index=1 %}#}
            {% for genus in genuses %}
                <tr>
                    <td>
                        <a href="{{ path('genus_show', {genusName: genus.name}) }}">
                            {{ genus.name }}
                        </a>
                    </td>
                    <td>{{ genus.name }}</td>
                    <td>{{ genus.speciesCount }}</td>
                {#{% set index = index+1 %}#}
                    {#{{ dump(genus) }}#}
                    <td>{{ genus.updatedAt|date('Y-m-d') }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}